@model Calculos.Models.CalculoModelo


<h2>Consultar</h2>



@{
    ViewBag.Title = "Consultar";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.DtoCalculo.Usuario.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DtoCalculo.Usuario.Nombre, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.DtoCalculo.RespuestaMaxima, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DtoCalculo.RespuestaMaxima, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DtoCalculo.RespuestaMaxima, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DtoCalculo.RespuestaMinina, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DtoCalculo.RespuestaMinina, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DtoCalculo.RespuestaMinina, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Consultar" class="btn btn-default" id="consutarcal" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Crear", "Crear")
</div>
<table border="1">
    <thead>
        <tr>
            <th> Usuario</th>
            <th> Respuesta</th>
            <th> Fecha y Hora</th>
            <th>Eliminar</th>
        </tr>

    </thead>
    <tbody>

        @foreach (var calculo in Model.dtoCalculos)
        {
            <tr>
                <td> @calculo.Usuario.Nombre</td>
                <td>@calculo.Respuesta</td>
                <td>@calculo.Fecha</td>
                <td><a onclick="eliminar(@calculo.IdCalculo)">Eliminar</a></td>
            </tr>
        }
    </tbody>
</table>





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/Calculo/Consultar.js"></script>

}

